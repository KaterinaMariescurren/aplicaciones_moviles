<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingrese un número del 1 al 5"
            android:textSize="18sp"
            android:textColor="@color/text" />

        <EditText
            android:id="@+id/et_numero_entrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="                      "
            android:inputType="number"
            android:maxLines="1"
            android:layout_marginTop="16dp"
            android:textColor="@color/text"
             />

        <Button
            android:id="@+id/btn_adivinar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adivinar"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            app:backgroundTint="@color/button"
            android:textColor="@color/text_button"
            />

        <TextView
            android:id="@+id/tv_puntaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntaje actual: 0"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/tv_mejor_puntaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mejor puntuación: 0"
            android:textSize="18sp"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/tv_intento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intentos restantes: 5"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:textColor="@color/text" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>